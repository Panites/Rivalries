<!DOCTYPE StreamControlLayout>

<layout width="430" height="270" tabbed="1">
	<tab name="Ranbats">
		<label x="65" y="10" width="46" height="13">Name</label>
		<label x="255" y="10" width="46" height="13">Score</label>

		<label x="10" y="34" width="46" height="13">Player 1</label>
		<label x="10" y="64" width="46" height="13">Player 2</label>

		<lineEdit id="p1Name" x="60" y="30" width="185" height="20" dataSet="players.csv" dataField="1"/>
		<lineEdit id="p2Name" x="60" y="60" width="185" height="20" dataSet="players.csv" dataField="1"/>

		<spinBox id="p1Score" x="250" y="30" width="80" height="20" height="25" maximum="999" />
		<spinBox id="p2Score" x="250" y="60" width="80" height="20" height="25" maximum="999" />

		<button type="swap" x="340" y="30" width="60" height="23" tooltip="Swap the Players and Scores" id="swapPlayers" swapSet1="p1Name,p1Score" swapSet2="p2Name,p2Score">Swap</button>
		<button type="reset" x="340" y="60" width="60" height="23" tooltip="Clear all" id="reset" reset="p1Name,p2Name,p1Score,p2Score">Clear</button>

		<label x="10" y="100" width="44" height="13">Round</label>
		<lineEdit id="round" x="60" y="94" width="180" height="20" dataSet="round.csv"/>

		<label x="10" y="128" width="80" height="13">Commentators</label>
		<lineEdit id="comm1" x="10" y="150" width="95" height="20" dataSet="players.csv" dataField="1"/>
		<lineEdit id="comm2" x="112" y="150" width="95" height="20" dataSet="players.csv" dataField="1"/> 
		<button type="swap" x="220" y="150" width="60" height="23" tooltip="Swap commentators" id="swapComms" swapSet1="comm1" swapSet2="comm2">Swap</button>
	</tab>
</layout>